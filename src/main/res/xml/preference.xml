<?xml version="1.0" encoding="UTF-8" ?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
<PreferenceCategory android:title="Settings">
<ListPreference
	android:key="lang"
	android:title="Languages"
	android:summary="Select language"
	android:dialogTitle="Select language"
	android:entries="@array/languages"
	android:entryValues="@array/entryvalues"
	/>
<ListPreference
	android:key="orientation"
	android:title="Orientation"
	android:summary="Set orientation"
	android:dialogTitle="Set orientation"
	android:entries="@array/orientation"
	android:entryValues="@array/orientationvalues"
	/>
<CheckBoxPreference
	android:key="backbutton"
	android:title="back button"
	android:summary="use back button to back to previous search"
	/>
</PreferenceCategory>
</PreferenceScreen>
